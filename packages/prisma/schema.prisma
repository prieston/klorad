// schema.prisma
// This is your Prisma schema file.
// Learn more: https://pris.ly/d/prisma-schema

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL") // Direct DO Postgres URL for migrations (used with Accelerate)
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                      String               @id @default(cuid())
  name                    String?
  email                   String?              @unique
  emailVerified           DateTime?
  image                   String?
  password                String?
  passwordResetToken      String?              @unique
  passwordResetTokenExp   DateTime?
  accounts                Account[]
  sessions                Session[]
  subscription            Subscription? // One-to-one relation with Subscription
  organizationMembers     OrganizationMember[]
  organizationInvitesSent OrganizationInvite[] @relation("InvitesSent") // Invitations sent by this user
  activities              Activity[] // Activities performed by this user (as actor)
}

model VerificationToken {
  id         String   @id @default(cuid())
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Organization {
  id                   String   @id @default(cuid())
  name                 String
  slug                 String   @unique
  // isPersonal indicates this is a personal organization (cannot have multiple members)
  isPersonal           Boolean  @default(false)
  // Billing fields
  planCode             String   @default("free") // References Plan.code
  stripeCustomerId     String?  @unique // Stripe customer ID
  stripeSubscriptionId String?  @unique // Stripe subscription ID
  subscriptionStatus   String? // active, canceled, past_due, etc.
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  members               OrganizationMember[]
  invites               OrganizationInvite[]
  projects              Project[]
  assets                Asset[]
  activities            Activity[]
  cesiumIonIntegrations CesiumIonIntegration[]
  cesiumAssets          CesiumAsset[]
  plan                  Plan                   @relation(fields: [planCode], references: [code])

  @@index([planCode])
}

enum OrganizationRole {
  owner
  admin
  member
  publicViewer
}

model OrganizationMember {
  id             String           @id @default(cuid())
  organizationId String
  userId         String
  role           OrganizationRole @default(member)
  createdAt      DateTime         @default(now())

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([organizationId, userId])
  @@index([userId])
  @@index([organizationId])
}

model OrganizationInvite {
  id             String           @id @default(cuid())
  organizationId String
  email          String
  role           OrganizationRole @default(member)
  token          String           @unique
  expires        DateTime
  invitedById    String // User who sent the invitation
  createdAt      DateTime         @default(now())

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  invitedBy    User         @relation("InvitesSent", fields: [invitedById], references: [id], onDelete: Cascade)

  @@unique([organizationId, email])
  @@index([email])
  @@index([token])
  @@index([organizationId])
}

model Project {
  id             String   @id @default(cuid())
  organizationId String
  title          String
  description    String?
  // sceneData stores your scene's configuration in JSON format.
  sceneData      Json
  engine         Engine   @default(three)
  // isPublished indicates whether the project is published (can be toggled on/off).
  isPublished    Boolean  @default(false)
  // isPublic indicates whether the published project requires authentication (false) or is publicly accessible (true).
  // For personal organizations, this is always true (cannot be changed).
  isPublic       Boolean  @default(true)
  // publishedUrl could be generated based on the project ID or a slug.
  publishedUrl   String?
  // thumbnail URL for the project preview image
  thumbnail      String?
  thumbnailSize  BigInt? // File size in bytes (for storage calculation)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // A project is owned by an organization.
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  // Optional relation to assets (if you attach models to a project).
  assets       Asset[]
  // Activities related to this project
  activities   Activity[]

  // Showcase Relation
  showcaseWorld ShowcaseWorld?
}

enum Engine {
  three
  cesium
}

model Asset {
  id               String    @id @default(cuid())
  organizationId   String
  projectId        String? // asset can optionally be linked to a project
  assetType        AssetType @default(model) // Type of asset: model or cesiumIonAsset
  fileUrl          String // URL to the file in your cloud storage
  fileType         String // e.g., "glb", "3dm", "jpg", etc.
  originalFilename String
  name             String? // User-defined friendly name for the asset
  description      String? // User-defined description of the asset
  thumbnail        String? // URL for the captured thumbnail image
  thumbnailSize    BigInt? // Thumbnail file size in bytes (for storage calculation)
  metadata         Json? // Stores descriptive information about the model
  fileSize         BigInt?   @default(0) // File size in bytes (for storage calculation)
  // Cesium Ion specific fields
  cesiumAssetId    String? // Cesium Ion asset ID (only for cesiumIonAsset type)
  cesiumApiKey     String? // Cesium Ion API key (only for cesiumIonAsset type)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // Relations:
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  project      Project?     @relation(fields: [projectId], references: [id], onDelete: SetNull)
}

enum AssetType {
  model // Regular 3D model (GLB, GLTF)
  cesiumIonAsset // Cesium Ion georeferenced asset
}

// Plan model defines available subscription plans
model Plan {
  code                            String   @id // "free", "pro", "enterprise"
  name                            String
  monthlyPriceCents               Int? // null for enterprise (custom pricing)
  yearlyPriceCents                Int? // null for enterprise (custom pricing)
  includedStorageGb               Int
  includedBandwidthGbPerMonth     Int
  includedSeats                   Int
  includedProcessingJobsPerMonth  Int
  includedProjects                Int? // null = unlimited
  includedPublishedProjects       Int? // null = unlimited
  includedPrivateShares           Int? // null = unlimited
  includedCesiumIntegrations      Int? // null = unlimited
  cesiumUploadLimitGb             Int? // null = unlimited
  overageStoragePricePerGbCents   Int      @default(0)
  overageBandwidthPricePerGbCents Int      @default(0)
  overageSeatPricePerMonthCents   Int      @default(0)
  stripeProductId                 String? // Stripe product ID
  stripePriceIdMonthly            String? // Stripe price ID for monthly billing
  stripePriceIdYearly             String? // Stripe price ID for yearly billing
  createdAt                       DateTime @default(now())
  updatedAt                       DateTime @updatedAt

  organizations Organization[]

  @@index([code])
}

// Subscription model to track organization subscriptions via Stripe (legacy - kept for backward compatibility)
model Subscription {
  id        String    @id @default(cuid())
  stripeId  String    @unique
  planId    String
  status    String
  startDate DateTime  @default(now())
  endDate   DateTime?
  userId    String    @unique
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Activity log to track user actions across the platform
// Append-only, flexible enough for any event (models, sensors, tilesets, org settings, etc.)
model Activity {
  id             String             @id @default(cuid())
  // Scoping
  organizationId String
  projectId      String? // null = org-level activity (billing, members, etc.)
  // Who did it
  actorId        String // User.id
  // What object was touched
  entityType     ActivityEntityType
  entityId       String // Project.id, Asset.id, Sensor.id, etc.
  // What happened
  action         ActivityActionType
  message        String? // optional pre-rendered message for logs
  metadata       Json? // details for rendering rich UI
  createdAt      DateTime           @default(now())

  // Relations:
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  project      Project?     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  actor        User         @relation(fields: [actorId], references: [id], onDelete: Cascade)

  @@index([organizationId, createdAt])
  @@index([projectId, createdAt])
  @@index([entityType, entityId, createdAt])
  @@index([actorId, createdAt])
}

enum ActivityEntityType {
  PROJECT
  MODEL
  GEOSPATIAL_ASSET
  SENSOR
  DATA_SOURCE
  ORGANIZATION
  USER
  CESIUM_INTEGRATION
  CESIUM_ASSET
  SHOWCASE_WORLD
  SHOWCASE_TAG
}

enum ActivityActionType {
  CREATED
  UPDATED
  DELETED
  RENAMED
  PUBLISHED
  ARCHIVED
  ADDED // e.g. "Model added to project"
  REMOVED
  SYNCED // e.g. "Synced with Cesium Ion"
}

model CesiumIonIntegration {
  id                String    @id @default(cuid())
  organizationId    String
  label             String // User-defined label/name for the integration
  readToken         String    @db.Text // Encrypted read-only token
  uploadToken       String    @db.Text // Encrypted upload token
  readTokenLast4    String // Last 4 characters of read token (for display)
  uploadTokenLast4  String // Last 4 characters of upload token (for display)
  readTokenValid    Boolean   @default(false) // Whether read token is valid
  uploadTokenValid  Boolean   @default(false) // Whether upload token is valid
  readTokenScopes   Json? // Scopes array for read token
  uploadTokenScopes Json? // Scopes array for upload token
  cesiumAccountId   String? // Cesium account ID (if inferable from API)
  lastSyncedAt      DateTime? // Last time sync was performed
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  organization Organization  @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  cesiumAssets CesiumAsset[]

  @@index([organizationId])
}

model CesiumAsset {
  id             String            @id @default(cuid())
  organizationId String
  integrationId  String
  cesiumAssetId  String // Cesium Ion asset ID
  name           String
  type           String? // Asset type from Cesium
  attributions   Json? // Attributions/description from Cesium
  status         CesiumAssetStatus @default(active)
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  organization Organization         @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  integration  CesiumIonIntegration @relation(fields: [integrationId], references: [id], onDelete: Cascade)

  @@unique([integrationId, cesiumAssetId])
  @@index([organizationId])
  @@index([integrationId])
  @@index([cesiumAssetId])
}

enum CesiumAssetStatus {
  active
  deleted
  unknown
}

// Dynamic Showcase System

model ShowcaseWorld {
  id           String  @id @default(cuid())
  title        String
  description  String?
  thumbnailUrl String?
  url          String // URL to the published project or iframe source

  // Optional link to an internal Project
  projectId String?  @unique
  project   Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)

  isPublished Boolean @default(false)
  priority    Int     @default(0) // For sorting (higher shows first)

  // One-to-Many relation: A world has one tag
  tagId String?
  tag   ShowcaseTag? @relation(fields: [tagId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isPublished, priority])
}

model ShowcaseTag {
  id    String  @id @default(cuid())
  slug  String  @unique
  label String
  color String? // Optional hex color for the tag

  worlds ShowcaseWorld[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
